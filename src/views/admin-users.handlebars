<h1>Administraci√≥n de Usuarios</h1>
<table>
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Email</th>
            <th>Rol</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        {{#each users}}
        <tr>
            <td>{{this.first_name}} {{this.last_name}}</td>
            <td>{{this.email}}</td>
            <td>{{this.role}}</td>
            <td>
                <form action="/api/users/admin/users/{{this._id}}/role" method="POST">
                    <select name="role">
                        <option value="usuario" {{#if (eq this.role "usuario")}}selected{{/if}}>Usuario</option>
                        <option value="premium" {{#if (eq this.role "premium")}}selected{{/if}}>Premium</option>
                        <option value="admin" {{#if (eq this.role "admin")}}selected{{/if}}>Admin</option>
                    </select>
                    <button type="submit">Actualizar</button>
                </form>
                <form action="/api/users/admin/users/{{this._id}}" method="POST">
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit">Eliminar</button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>